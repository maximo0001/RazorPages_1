@page
@using Prueba.Models
@model Prueba.Pages.PeopleModel
@{

    <h1>People</h1>

    <form method="post">

        <input type="number" name="Id" />
        <input type="text" name="Name" />
        <input type="number" name="Age" />


        <button type="submit">Add</button>



    </form>

    <table class="table">
        
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
            </tr>
        </thead>

        <tbody>
            @foreach(Person person in Model.People)
            {
                <tr>
                    <td>
                        @person.Id
                    </td>
                    <td>
                        @person.Name
                    </td>
                    <td>
                        @person.Age
                    </td>
                </tr>
            }
        </tbody>
        
    </table>
}
